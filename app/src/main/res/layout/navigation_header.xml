<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="192dp"
    android:background="@drawable/e_perforacion1"
    android:gravity="bottom"
    android:orientation="vertical"
    android:padding="16dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">
    <!--de.hdodenhof.circleimageview.CircleImageView-->

    <!--drawable/ic_launcher_background-->
    <ImageView
        android:id="@+id/face_emp_photo"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:srcCompat="@drawable/ic_obrero2"
        android:scaleType="centerCrop"
        android:layout_marginBottom="16dp"/>
    <TextView
        android:id="@+id/txt_nombre_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#ffffff"
        android:textStyle="bold"
        tools:text="Usuario Redrilsa"/>
    <TextView
        android:id="@+id/txt_correo_nav"
        style="@style/Widget.AppCompat.Spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#ffffff"
        tools:text="usuario@redrilsa.com"/>
</LinearLayout>